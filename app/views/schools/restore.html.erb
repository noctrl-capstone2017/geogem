<% provide(:title, "Restore school") %>

<!-- page header -->
<%= render partial: 'schools/school_page_header', 
			:locals => { 	:title => "Restore School", 
										:description => "restore all teacher logins"} %>

<div class="row first-content-row content-text">
	<div class="col-xs-10">
		<p>
			Super's focus school: 
			<span style="color: <%= @school.color %>; font-size: 1.2em; font-weight: bold;">
				<%= @school.full_name %>
			</span>
		</p>
		<p>
			Number of suspended teachers at this school:
			<span style="color: gray; font-size: 1.2em; font-weight: bold;">
					<%= @teacher_count %> teachers
			</span>
		</p>
	
		<form class="form-horizontal" action="super">
			<!-- Action buttons -->
			<div class="row action-buttons-row">
				<div class="col-xs-4 col-xs-offset-1 text-center"> 
					<button type="submit" class="btn btn-success">Restore school</button>
					&nbsp; &nbsp; &nbsp;
					<button type="submit" class="btn btn-danger">Cancel</button></div>
			</div>
		</form>

	</div>   <!-- col -->
</div>   <!-- row -->
