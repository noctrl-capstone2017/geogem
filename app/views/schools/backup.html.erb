<% provide(:title, "Backup school") %>

<!-- page header -->
<%= render partial: 'schools/school_page_header', 
			:locals => { 	:title => "Backup school", 
										:subtitle => "save #{ @school.full_name } data to a text file"} %>

<div class="row form-row2 pad20 content-text">
	<div class="col-xs-10">
		<p>
			Super's focus school: 
			<span style="color: <%= @school.color %>; font-size: 1.2em; font-weight: bold;">
				<%= @school.full_name %>
			</span>
		</p>
		<p>
			The backup will be saved to file: 
			<span style="color: gray; font-size: 1.2em; font-weight: bold;">TMS_backup.txt</span>
			<br>
		</p>
	</div>   <!-- col -->
</div>   <!-- row --> 

<!-- OK/cancel buttons -->
<div class="row form-row2 pad40">
	<div class="col-xs-10">
		<%= form_for( @school, :url => { :action => :do_backup }) do |f| %>
			<%= button_tag(type: 'submit', class: "btn btn-lg btn-success") do %>Backup school<% end %>
			&nbsp; &nbsp; &nbsp;
			<%= link_to "Cancel", super_path, :class => "btn btn-lg btn-danger",
						:title => "Back to Super page" %>
		<% end %>
	</div>
</div>
