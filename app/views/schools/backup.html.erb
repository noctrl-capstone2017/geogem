<% provide(:title, "Backup school") %>

<!-- page header -->
<div class="page-header vertical-align">
	<div class="col-xs-11">
		<h2>Backup School<small> - save school data to a file</small></h2>
	</div>
	<div class="col-xs-1 center-block">
		<div class="header-sq i-red" title="Prof Bill is Super User">
			<span class="fa fa-flash fa-3x teacher-icon"></span>
		</div>
	</div>
</div><!--End page header-->
		
<div class="row first-content-row content-text">
	<p>
		Backup the Super User's focus school: <span style="color: blue; font-size: 1.4em; font-weight: bold;"><%= @school_name %></span>
	</p>
	<p>
		The backup will be saved to file: <span style="color: gray; font-size: 1.4em; font-weight: bold;">TMS_backup.txt</span>
		<br>
	</p>

	<form class="form-horizontal" action="super">
		<!-- Action buttons -->
		<div class="row action-buttons-row">
			<div class="col-xs-3 col-xs-offset-1 text-center"> 
				<button type="submit" class="btn btn-success">Backup school</button>
				&nbsp; &nbsp; &nbsp;
				<button type="submit" class="btn btn-danger">Cancel</button></div>
		</div>
	</form>
</div>
