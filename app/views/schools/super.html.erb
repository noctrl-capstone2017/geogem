<!-- Authors: UX team; Robert Herrera and Dakota B -->
<% provide(:title, "Super dashboard") %>

<!-- page header -->
<%= render partial: 'teachers/super_page_header', 
			:locals => { 	:title => "Super dashboard", 
										:description => "exercise GeoGem superpowers"} %>

<!-- school focus spinner -->
<div class="row first-content-row">
	<div class="col-xs-11 col-xs-offset-1">
		<%= render 'schoolSelect', school: @school %>
	</div>
</div>

<!-- first row of action icons -->
<div class="row" style="margin-top: 60px;">

	<!-- All schools icon -->
	<div class="col-xs-2 col-xs-offset-1 text-center" title="View/edit schools">
		<div class ="action-sq i-action-gray1 center-block">
			<%= link_to schools_path do %>
				<span class="fa fa-3x fa-fw fa-home action-icon"></span>
			<% end %>
		</div>
		<%= link_to schools_path do %>All schools<% end %>
	</div>

	<!-- Super report icon -->
	<div class="col-xs-2 text-center" title="GeoGem stats for Super">
		<div class ="action-sq i-action-gray2 center-block">
			<%= link_to super_report_path do %>
				<span class="fa fa-3x fa-fw fa-file-text action-icon"></span>
			<% end %>
		</div>
		<%= link_to super_report_path do %>Super report<% end %>
	</div>
</div>   <!-- first row of icons -->

<!-- action icons, row 2 -->
<div class="row action-icon-row" >
	<!-- Backup school icon -->
	<div class="col-xs-2 col-xs-offset-1 text-center" title="Backup data of Super focus school">
		<div class ="action-sq i-action-gray3 center-block">
			<%= link_to school_backup_path do %>
				<span class="fa fa-3x fa-fw fa-floppy-o action-icon"></span>
			<% end %>
		</div>
		<%= link_to school_backup_path do %>Backup school<% end %>
	</div>

	<!-- Suspend school icon -->
	<div class="col-xs-2 text-center" title="Suspend all teachers at Super focus school">
		<div class ="action-sq i-action-gray4 center-block">
			<%= link_to school_suspend_path do %>
				<span class="fa fa-3x fa-fw fa-bomb action-icon"></span>
			<% end %>
		</div>
		<%= link_to school_suspend_path do %>Suspend school<% end %>
	</div>

	<!-- Retore school icon -->
	<div class="col-xs-2 text-center" title="Restore teacher logins at Super focus school">
		<div class ="action-sq i-action-gray5 center-block">
			<%= link_to school_restore_path do %>
				<span class="fa fa-3x fa-fw fa-undo action-icon"></span>
			<% end %>
		</div>
		<%= link_to school_restore_path do %>Restore school<% end %>
	</div>
</div>   <!-- 2nd row of icons -->
