<% provide(:title, "Setup session") %>

<!-- page header -->
<%= render partial: 'student_page_header', 
			:locals => { 	:title => "Setup session", 
										:subtitle => "setup behavior sessions for student #{ @student.full_name }"} %>

<%= form_for(@student) do |f| %>
  <%= render 'error_messages', object: f.object %>

<div class="row form-row2">

	<!-- SESSION INTERVAL spinner -->
	<div class="col-xs-10 col-md-6 form-group">
		<label>Session Interval <small> (minutes) </small></label>
		<%= f.select :session_interval, [5,15,30,60], {}, {class: 'form-control form-input-tweak'}  %> 
	</div>

	<div class="clearfix"></div>

	<!-- SESSION INTERVAL COUNTING is a true/false checkbox -->
	<div class="col-xs-10 col-md-6 form-group pad20">
		<label>Session squares</label>
		<span class="fa fa-fw fa-lg fa-question-circle color-scheme-blue"
					data-toggle="popover" data-trigger="click" data-placement="bottom"
					data-content="By default, GeoGem records each time a behavior square is pressed.<br>However, if interval counting is set true, behavior squares are only counted once per interval during a session."></span>
		<span class="checkbox" style="padding-left: 40px;">
			<%= f.label :session_interval_counting do %>
				<%= f.check_box :session_interval_counting, { :class=> 'form-check' }, "true", "false" %>
				&nbsp; Interval counting
			<% end %>
		</span>
	</div>

	<div class="clearfix"></div>

	<!-- SESSION NOTES is a text box -->
	<div class="col-xs-10 form-group pad20">
		<label>Session instructions <small> (optional) </small></label>
		<span class="fa fa-fw fa-lg fa-question-circle color-scheme-blue"
					data-toggle="popover" data-trigger="click" data-placement="bottom"
					data-content="These instructions are shown during the student's behavior session."></span>
		<%= f.text_area :session_instructions, class: "form-control form-input-tweak info-textarea",
					rows: "6" %>
	</div>

</div>   <!-- row -->

<div class="row form-row2 pad20">
	<div class="col-xs-10">
		<%= button_tag( type: 'submit', name: "editc", class: "btn btn-lg btn-success") do %>Save session setup<% end %>
		&emsp; &emsp; &emsp;
		<%= link_to "Cancel", 'edit', :class => "btn btn-lg btn-danger", 
					:title => "Back to Setup student page" %>
	</div>
</div>

<% end %>
