<!-- edit view for students, renderd _form -->

<!-- page header -->
	<div class="page-header vertical-align">
			
		<!-- Fills in with student full name -->
		<div class="col-xs-11">
			<h2>Student Profile <small>- view/edit information for student <%= @student.full_name %></small></h2>
		</div>
			
		<!-- Fills in Student icon, color, & float over name -->
		<div class="col-xs-1 center-block">
			<div class="header-sq i-<%= @student.color %>" title="<%= @student.screen_name %>">
				<span class="fa fa-<%= @student.icon %> fa-3x teacher-icon"></span>
			</div>
		</div>
		
	</div>
<!--End page header-->

<%= render 'form', student: @student, isNew: false %> <!--Renders my form partial-->

<!-- Page Footer -->
	<div class="row action-icon-row" style="margin-top: 40px;">
		
	<!-- Students Square Link -->
		<div class="col-xs-2 col-xs-offset-1 text-center" title="View/edit squares for student">
			
			<!-- Square Symbol -->
			<div class="action-sq i-ltblue center-block">
				<a href="<%= edit_roster_square_path(@student)%>"><span class="fa fa-square-o fa-4x action-icon"></span></a> <!--needs to navigate to student square page-->
			</div>
			
			<!-- Square Lable -->
			<p><a href="<%= edit_roster_square_path(@student)%>"><span class="student-icon-text">View Squares</span></a></p>
		</div>
	<!-- End of student square link -->
	
	</div>
<!-- End page footer-->
