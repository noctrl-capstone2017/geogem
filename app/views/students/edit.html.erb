<% provide(:title, "Student profile") %>

<!-- page header -->
<%= render partial: 'student_page_header', 
			:locals => { 	:title => "Student profile", 
										:subtitle => "view/edit student #{ @student.full_name }"} %>

<%= render 'form', student: @student, isNew: false %> <!--Renders my form partial-->

<!-- Student squares action icon after the student info/form -->
<div class="row action-icon-row">
	<div class="col-xs-2 col-xs-offset-1 text-center" title="View/edit squares for student">
		<div class="action-div">
			<%= link_to edit_roster_square_path(@student) do %>
				<%= render 'action_icon', icon_color: "action-icon-gray", fa_icon: "fa-square-o" %>
			<% end %>
		</div>
		<%= link_to edit_roster_square_path(@student) do %>View Squares<% end %>
	</div>   <!-- col -->
</div>   <!-- row -->
