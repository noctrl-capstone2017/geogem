<% provide(:title, "Analysis") %>

<!--page header -->
<%= render partial: 'student_page_header', 
			:locals => { 	:title => "Analysis", 
										:subtitle => "reports, graphs and export of session data for #{ @student.full_name }"} %>

<div class="row form-row2 navpanel-row pad20">

  <!-- RUBY REPORT nav panel -->
	<div class="col-xs-12 col-sm-6">
		<div class="panel panel-default navpanel">
		  <div class="panel-heading">
		    <h3 class="panel-title navpanel-title"><span class="fa fa-lg fa-fw fa-diamond navpanel-ruby"></span> Ruby Report</h3>
		  </div>
		  <div class="panel-body navpanel-body">
		    <p>Report the results of one behavior session.</p>
		    <p>
		    	<%= link_to analysis_ruby_path(@student.id), class: 'btn btn-lg btn-default navpanel-ruby-button' do %>
		    		Ruby report <span class="fa fa-fw fa-chevron-right"></span>
		    	<% end %>
		    </p>
		  </div>
		</div>   <!-- panel -->
	</div>

  <!-- TOPAZ FORM nav panel -->
	<div class="col-xs-12 col-sm-6">
		<div class="panel panel-default navpanel">
		  <div class="panel-heading">
		    <h3 class="panel-title navpanel-title"><span class="fa fa-lg fa-fw fa-print navpanel-topaz"></span> Topaz Form</h3>
		  </div>
		  <div class="panel-body navpanel-body">
		    <p>The Topaz form can be printed out and filled in manually during a student session.
		    </p>
		    <p>
		    	<%= link_to analysis_topaz_path(@student.id), :class => "btn btn-lg btn-default navpanel-topaz-button" do %>
						Topaz form <i class="fa fa-fw fa-chevron-right"></i>
		    	<% end %>
		    </p>
		  </div>
		</div>   <!-- panel -->
	</div>

  <div class="clearfix"></div>

  <!-- EMERALD EXPORT nav panel -->
	<div class="col-xs-12 col-sm-6">
		<div class="panel panel-default navpanel">
		  <div class="panel-heading">
		    <h3 class="panel-title navpanel-title"><span class="fa fa-lg fa-fw fa-file-excel-o navpanel-emerald"></span> Emerald Export</h3>
		  </div>
		  <div class="panel-body navpanel-body">
		    <p>Save/download session data in CSV format.<br>
		    Comma-Separated Values (CSV) is a text format that is used by many spreadsheet programs like Excel.
		    </p>
		    <p>
		    	<%= link_to analysis_emerald_path(@student.id), :class => "btn btn-lg btn-default navpanel-emerald-button" do %>
						Emerald export <i class="fa fa-fw fa-chevron-right"></i>
		    	<% end %>
		    </p>
		  </div>
		</div>   <!-- panel -->
	</div>

</div>   <!-- row -->

<!-- BACK TO HOME button -->
<div class="row form-row2 pad40">
	<div class="col-xs-10">
		<p>
			<%= link_to student_path(@student.id), class: 'btn btn-lg btn-default navpanel-darkgray-button' do %>
		  	<span class="fa fa-fw fa-chevron-left"></span> Back to Student page
		  <% end %>
		</p>
	</div>
</div>   <!-- row -->

