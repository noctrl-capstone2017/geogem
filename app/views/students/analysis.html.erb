<% provide(:title, "Analysis") %>

<!--page header -->
<div class="page-header vertical-align">
    <div class="col-xs-11">
        <h2>Analysis <small> - reports for <%= @student.full_name %> </small></h2><!--Dynamically fills in with school id -->
    </div>
    <div class="col-xs-1 center-block">
        <div class="student-page-header-icon <%= icon_color(@student) %>" title="Analysis">
            <span class="fa fa-line-chart fa-3x"></span>
        </div>
    </div>
</div><!--End page header-->

<style>
.action-sq {
	height: 6em;
	width: 6em;
	display: flex;
	align-items: center;
	justify-content: center;
	border-radius: 10px;
	transition: all .2s ease-in-out;
}
.action-sq:hover {
	-webkit-transform: scale(1.1);
	-moz-transform: scale(1.1);
	-o-transform:scale(1.1);
	transform:scale(1.1);
}
</style>

<!--content, buttons and text -->
<div class="content-text">
  <div class="form-group"> 

    <!-- Reports icon hyperlink and description -->
    <div class="row">
      <div class = "col-xs-2">
  			<a href="analysis2">
          <div class="col-xs-2 col-xs-offset-1 text-center" title="Reports">
            <div class ="action-sq i-blue center-block" >
              <span class="fa fa-file-text-o fa-4x action-icon" ></span>
            </div>
          </div> <!-- end col -->
        </a>
		  </div><!--end col-->

      <div class = "col-xs-8">
        <h3>Reports</h3>
        <p>Reports will include Behavior Session Summary, Weekly Report, and more.<br><br></p>
		  </div><!--end col-->
		</div><!--end row-->

		<br><br>

    <!-- Charts icon hyperlink and description -->
    <div class="row">
      <div class = "col-xs-2">
  			<a href="analysis3">
          <div class="col-xs-2 col-xs-offset-1 text-center" title="Charts">
            <div class ="action-sq i-red center-block" >
              <span class="fa fa-bar-chart fa-4x action-icon" ></span>
            </div>
          </div> <!-- col -->
        </a>
		  </div><!--end col-->
		  <div class = "col-xs-8">
        <h3>Charts</h3>
        <p>The monthly line chart for behavior squares, and more.<br><br></p>
		  </div><!--end col-->
		</div><!--end row-->

		<br><br>

    <!-- Export CSV icon hyperlink and description -->
		<div class="row">
      <div class = "col-xs-2">
  		  <a href="analysis4">
          <div class="col-xs-2 col-xs-offset-1 text-center" title="Export">
            <div class ="action-sq i-yellow center-block" >
              <span class="fa fa-file-excel-o fa-4x action-icon" ></span>
            </div>
          </div> <!-- col -->
        </a>
		  </div><!--end col-->
		  <div class = "col-xs-8">
        <h3>Export</h3>
        <p>Export behavior session data in CSV format.</p>
		  </div><!--end col-->
		</div><!--end row-->

  </div>   <!-- form-group -->
</div>   <!-- content-text -->
