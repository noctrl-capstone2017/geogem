<!-- new/edit students form partial -->

<%= form_for(student) do |f| %>
  <%= render 'error_messages', object: f.object %>

  <!-- hidden field for school id, school id of the current teacher -->
  <% if local_assigns[:isNew] %>
    <%= f.hidden_field :school_id, :value => current_teacher.school_id%>
  <% end %>

  <!-- student name -->
  <div class="row form-row">
    <div class="col-xs-2 col-xs-offset-1"><h4>Name: </h4></div>
    <div class="col-xs-4">
		  <% if local_assigns[:isNew] %>
			  <%= f.text_field :full_name, required: true, class: 'form-control' %>
			<% else %>
        <%= f.text_field :full_name, :readonly => true, class: 'form-control' %>
			<% end %>
    </div>
  </div>

  <!-- color + icon and sample icon that updates interactively -->
	<div class="row">
		<div class="col-xs-6 col-xs-offset-1"><h4>Student Icon:</h4></div>
	</div>

	<div class="row form-row vertical-align">
		<!-- color and icon spinners in the 1st column -->
		<div class="col-xs-4 col-xs-offset-3">
			<div class="row">
				<div class="col-xs-3"><h4>Color: </h4></div>
				<div class="col-xs-7 col-xs-offset-1">
					<%= f.select :color, studentColors.map {|color| [color.titleize, color]}, 
											{}, {class: 'form-control'} %>
				</div>
			</div>   <!-- row -->
			<div class="row">
				<div class="col-xs-3"><h4>Icon: </h4></div>
				<div class="col-xs-7 col-xs-offset-1">
					<%= f.select :icon, studentIcons.map {|icon| [icon.titleize, icon]}, 
									{}, {class: 'form-control'} %>
				</div>
			</div>   <!-- row -->
		</div>   <!-- spinners col -->

		<!-- sample teacher icon in the 2nd column; it's interactive! -->
		<div class="col-xs-4">
			<div class="col-xs-2">
				<div id="sample-student-color" class="student-icon <%= icon_color(student) %>" 
									title="student=<%= student.full_name %>" >
					<span id="sample-student-icon" class="fa fa-3x fa-fw <%= fa_icon(student) %> "></span>
				</div>
			</div>
		</div>   <!-- sample icon col -->
	</div>   <!-- color+icon row -->

  <!-- interval time for behavior sessions -->
  <div class="row form-row" style="padding-top: 40px">
    <div class="col-xs-2 col-xs-offset-1"><h4>Session Interval:<small><br>(minutes) </small></h4></div>
    <div class="col-xs-2">
      <%= f.select :session_interval, [5,15,30,60], {}, {class: 'form-control'}  %>    				
    </div>
  </div

  <!-- extra student info (optional) -->  
	<div class="row form-row">
		<div class="col-xs-2 col-xs-offset-1"><h4>Student Info: <br><small>(optional)</small></h4></div>
		<div class="col-xs-6">
      <%= f.text_area :contact_info, class: "form-control info-textarea" %>
		</div>
	</div>

  <!-- OK/Cancel buttons -->
	<div class="row form-row  action-buttons-row">
		<div class="col-xs-6 col-xs-offset-1 text-center">
		  <% if local_assigns[:isNew] %>
		    <%= button_tag(type: 'submit', class: "btn btn-success") do %>Add New Student<% end %>
		  <% else %>
        <%= button_tag(type: 'submit', class: "btn btn-success") do %>Save Changes<% end %>
		  <% end %>
		  &emsp; &emsp; &emsp;
		  <%= link_to "Cancel", students_path, :class => "btn btn-danger", 
		        :title => "Back to All Students page" %>
		</div>
	</div>

<% end %>

<!-- 
	Javascript below is specifically for this Teacher Profile page.
	It makes the sample teacher icon change interactively with color or icon spinner.
	CSS ID's make this (spaghetti code) work: 
		#teacher_color - the Rails-created ID for the color spinner
		#teacher_icon - the Rails-created ID for the icon spinner
		#sample-teacher-color - div where sample icon color is set
		#sample-teacher-icon - div where sample FA icon is set
-->
<script>
	$(document).ready(function() {
		$('#student_color').change(function(){
			setColor();
		});
		$('#student_icon').change(function(){
			setIcon();
		});
	});

	function setColor() {
		var color =  $('#student_color').find('option:selected').attr('value');
		$('#sample-student-color').removeClass();
		$('#sample-student-color').addClass('student-icon');
		$('#sample-student-color').addClass('i-' + color);
	}
	function setIcon() {
		var icon =  $('#student_icon').find('option:selected').attr('value');
		$('#sample-student-icon').removeClass();
		$('#sample-student-icon').addClass('fa fa-3x fa-fw');
		$('#sample-student-icon').addClass('fa-' + icon);
	}
</script>
