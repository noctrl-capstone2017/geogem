<!-- use recommeneded squares in student's roster -->	
<% roster_squares.each_with_index do | each_roster_square, index |%>

	<% if ux_first_row(index) %>
		<div class="row col-xs-offset-2">
	<% end %>

	<% if ux_next_row(index, 4) %>
		</div>   <!-- ux_next_row end div -->
		<div class="row col-xs-offset-2 pad20">
	<% end %>

	<% real_square = get_real_square( each_roster_square) %>
 	<div class="col-xs-2">
		<%= link_to square_path(real_square), :class => "bsquare-link" do %>
			<div class="bsquare-icon <%= glow_color(real_square) %> text-center" >
				<h3><%= real_square.screen_name %></h3>
		    <span class="fa fa-fw fa-lg <%= fa_bsquare_icon(real_square) %>"></span>
			</div>   <!-- behavior-square -->
		<% end %>   <!-- link_to edit square -->
	</div>

	<% if ux_last_row( index, roster_squares.count) %>
		</div>   <!-- ux_last_row end div -->
	<% end %>

<% end %>   <!-- for each student roster square-->
