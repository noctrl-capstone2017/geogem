<% provide(:title, "Ruby Report") %>

<!--page header -->
<%= render partial: 'student_page_header', 
			:locals => { 	:title => "Ruby Report", 
										:subtitle => "show session stats for one behavior square for #{ @student.full_name }"} %>

<!-- student name -->
<div class="row form-row2 pad20">
	<div class="col-xs-10 col-md-6 form-group">
		<label for="studentField">Student</label>
			<%= text_field_tag "studentName", @student.full_name, :readonly => true, 
						class: 'form-control form-input-tweak' %>
	</div>
</div>   <!-- row -->

<div class="form-spacer"></div>

<div class="row form-row2 pad20">
	<div class="col-xs-10 col-md-6 form-group">
		<h4><span class="lead color-ruby">Ruby Report</span> is coming soon...</h4>
		<br>
	</div>
</div>   <!-- row -->

<!-- return to Student Analysis page -->
<div class="row form-row2 pad40">
	<div class="col-xs-10">
		<h4>
			Return to analysis page for <%= @student.full_name %>... 
			<big><%= link_to "Analysis Page", analysis_url %></big>
		</h4>
	</div>
</div>   <!-- row -->
