<navbar1 class="navbar1">
    <nav class="navbar navbar-static-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
			
			<!-- Icon added by Kevin M -->
			<%= link_to home_path, class: "navbar-brand" do%>
				<span><%= image_tag("favicon.ico", :alt => "geogem icon")%></span> GeoGem
			<% end %>
			</div>
			<div id="navbar" class="collapse navbar-right navbar-collapse">
				<ul class="nav navbar-nav ">
				<!-- Note from Carolyn C: Navbar Icons mixed with Ruby on Rails: Source:http://stackoverflow.com/questions/4837824/can-i-use-a-link-to-to-generate-a-link-with-a-span-inside -->
					<li><%= link_to help_path do %><span class="fa fa-question-circle-o fa-fw"></span>Help<% end %></li>
				
				<!-- Note from Carolyn C: if Admin, show admin icon. If super, show super Icon. Otherwise, only show normal icons.-->
				<% if is_super? %>
					<li><%= link_to super_path do %><span class="fa fa-superpowers fa-fw"></span>Super<% end %></li>
				<% end %>
				
				<% if is_admin? %>
					<li><%= link_to admin_path do %><span class="fa fa-font fa-fw"></span>Admin<% end %></li>
				<% end %>
				
				<!--Check login_session_helper for more on current_teacher! Very handy. -KM-->
					<li><%= link_to edit_teacher_path(current_teacher.id) do %><span class="fa fa-user-circle fa-fw"></span>Profile<% end %></li>
					
					<li><%= link_to logout_path  do %><span class="fa fa-sign-out fa-fw"></span>Logout<% end %></li>
				</ul>
			</div><!-- end nav-collapse -->
		</div><!-- end navbar -->
	</nav>
</navbar1>