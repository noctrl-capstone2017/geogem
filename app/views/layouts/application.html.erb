<!DOCTYPE html>
<html>
	<head>
		<title><%= full_title(yield(:title)) %></title>
		<%= csrf_meta_tags %>
		<%= favicon_link_tag %>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script> 
		<script src="https://use.fontawesome.com/6ac119a099.js"></script>	
		<%= javascript_include_tag "https://www.gstatic.com/charts/loader.js", "chartkick" %>
		<%= render 'layouts/shim' %> 
	</head>

	<body>
		<%= render 'layouts/navbar' unless @special_navbar_and_layout %>

		<!-- begin contain and render flashes, if any -->
		<% if not @special_navbar_and_layout %>
<div class="container">
	<div class="col-xs-10 col-xs-offset-1 col-sm-12 col-sm-offset-0 content-col">
<% flash.each do |message_type, message| %>
	<br>
	<div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>
		<% end %>

		<%= yield %>

		<%= render 'layouts/footer' %>
		<%= debug(params) if Rails.env.development? %>

		<!-- end container -->
		<% if not @special_navbar_and_layout %>
</div>   <!-- content-col -->
	</div>   <!-- container -->
		<% end %>

	</body>
</html>
