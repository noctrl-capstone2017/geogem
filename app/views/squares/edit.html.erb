<% provide(:title, "Setup square") %>

<!-- page header -->
<%= render partial: 'square_page_header', 
			:locals => { 	:title => "Setup square", 
										:subtitle => "admin setup actions for behavior square #{ @square.screen_name }"} %>

<%= form_for( @square) do |f| %>
	<%= render 'error_messages', object: f.object %>


<div class="row form-row2 navpanel-row">

	<!-- PROPERTIES navpanel-->
	<div class="col-xs-12 col-sm-5 col-lg-6 navpanel-col">
		<div class="panel panel-default navpanel">
		  <div class="panel-heading">
		    <h3 class="panel-title navpanel-title"><span class="fa fa-lg fa-fw fa-edit navpanel-yelloworange"></span> Properties</h3>
		  </div>
		  <div class="panel-body navpanel-body">
		    <p>Review or edit behavior square properties.</p>
		    <p>
		    	<%= link_to 'edita', :class => "btn btn-lg btn-default navpanel-yelloworange-button" do %>
						Edit properties <i class="fa fa-fw fa-chevron-right"></i>
		    	<% end %>
		    </p>
		  </div>
		</div>   <!-- panel -->
	</div>

</div>   <!-- row -->

<% end %>

<!-- BACK TO ADMIN button -->
<div class="row form-row2 pad40">
	<div class="col-xs-12 col-sm-6">
		<p>
			<%= link_to admin_path, class: 'btn btn-lg btn-default navpanel-darkgray-button' do %>
		  	<span class="fa fa-fw fa-chevron-left"></span> Back to Admin
		  <% end %>
		</p>
	</div>
</div>   <!-- row -->
