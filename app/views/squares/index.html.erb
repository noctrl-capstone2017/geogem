<% provide(:title, "All squares") %>

<!-- page header -->
<%= render partial: 'schools/school_page_header', 
			:locals => { 	:title => "All squares", 
										:subtitle => "view/manage all behavior squares at #{ @school.full_name }"} %>

<!-- Start with square info and the New Square button -->
<div class="row">
	<div class="col-xs-5 col-xs-offset-1">
	  <h4>
      There <%= @squares.count == 1 ? 'is' : 'are' %> 
      <%= pluralize(@squares.count, "behavior square") %> at <%= @school.full_name %>. 
    </h4>
	</div>
	<div class="col-xs-5 text-center">
		<%= button_to new_square_path, method: :get, class: 'col-sm-offset-1 btn btn-lg btn-success' do %>
			<span class="fa fa-fw fa-lg fa-plus-square-o"></span> New Square
		<% end %>
	</div>
</div>

<!-- Start all squares table -->
<div class="row">
	<div class="col-xs-10 col-xs-offset-1">

<table class= "table table-striped table-hover table-responsive schools-table">
  <!-- Squares Table Header-->
  <thead>
	  <tr>
			<th>Icon</th>
		  <th>ID</th>
			<th>Type</th>
			<th>Description</th>
		</tr>
	</thead>

  <!-- Squares Table Body -->
  <tbody>
    <% @squares.each do |square| %>
    
			<!--Make the entire line link--> 
      <tr data-link="<%= edit_square_path(square) %>">
        
        <!-- Square Color -->
        <td>
          <div class="table-sq i-<%= square.color %>">
				    <i class="fa fa-2x  fa-fw fa-square-o table-icon"></i>
				  </div>
				</td>
				
				<!-- Square Name -->
        <td><%= square.screen_name %></td>
        
        <!-- If statement for translating  square type int into string -->
        <td><% if square.tracking_type == 1 %>
              <p class="listText">Duration</p>
            <% elsif square.tracking_type == 2 %>
              <p class="listText">Frequency</p>
            <% else %>
              <p class="listText">Interval</p>
            <% end %>
        </td>
        
        <!-- Square Description -->
        <td><%= truncate square.description, :length => 60 %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>

  </div>   <!-- col -->
</div>   <!-- row -->
