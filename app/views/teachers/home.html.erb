<% provide(:title, "Home") %>

<!-- page header -->
<%= render partial: 'home_page_header', :locals => { 	:title => "Home" } %>

<!-- things got too BIG, so home into into 3 separate partials -->

<!-- form to switch between all/your student views -->
<%= render 'home_views_toggle' %>

<!-- two choices: select one of your students, or select from all students -->
<% if @view_all %>
	<%= render 'home_all_students' %>
<% else %>
	<%= render 'home_your_students' %>
<% end %>


<!-- Control the selection and unselection of the student roster -->
<script>
	$(document).ready(function() {
		// when radio icon is clicked, set that select attribute to student ID
		$(".image-radio").click("click",function(){
		     $(this).attr('checked',true);
		     $("select[name='student_id']").val($(this).attr('id'));
		});

		// when radio button is clicked, enable the OK button 
		$('.view-radio').on('click', function() {
				$("#goto-button").removeClass('disabled');
				$("#goto-button").prop("disabled", false); 
		});
	});
</script>
