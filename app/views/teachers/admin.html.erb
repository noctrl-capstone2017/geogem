<!-- Authors: UX team, Robert Herrera and Dakota B -->
<% provide(:title, "Admin dashboard") %>

<!-- page header -->
<%= render partial: 'schools/school_page_header', 
			:locals => { 	:title => "Admin dashboard", 
										:description => "exercise admin powers"} %>

<!-- action icons, first row -->		
<div class="row action-icon-row">

	<!-- View/edit school -->
	<div class="col-xs-2 col-xs-offset-1 text-center" title="View/edit schools">
		<div class ="action-sq i-action-gray1 center-block">
			<%= link_to edit_school_path(@current_teacher) do %>
				<span class="fa fa-3x fa-fw fa-home action-icon"></span>
			<% end %>
		</div>
		<%= link_to edit_school_path(@current_teacher) do %>School profile<% end %>
	</div>

	<!-- Basic school report for admins -->
	<div class="col-xs-2 text-center" title="GeoGem stats for Super">
		<div class ="action-sq i-action-gray2 center-block">
			<%= link_to admin_report_path do %>
				<span class="fa fa-3x fa-fw fa-file-text-o action-icon"></span>
			<% end %>
		</div>
		<%= link_to admin_report_path do %>Admin report<% end %>
	</div>
</div>   <!-- first row of icons -->

<!-- action icons, second row -->
<div class="row action-icon-row">

	<!-- View/edit all students -->
	<div class="col-xs-2 col-xs-offset-1 text-center" title="View/edit all students">
		<div class ="action-sq i-action-gray4 center-block">
			<%= link_to students_path do %>
				<span class="fa fa-3x fa-fw fa-child action-icon"></span>
			<% end %>
		</div>
		<%= link_to students_path do %>All Students<% end %>
	</div>

	<!-- View/edit all teachers -->
	<div class="col-xs-2 text-center" title="View/edit all teachers">
		<div class ="action-sq i-action-gray3 center-block">
			<%= link_to teachers_path do %>
				<span class="fa fa-3x fa-fw fa-apple action-icon"></span>
			<% end %>
		</div>
		<%= link_to teachers_path do %>All Teachers<% end %>
	</div>

	<!-- View/edit all behavior squares-->
	<div class="col-xs-2 text-center" title="View/edit all behavior squares">
		<div class ="action-sq i-action-gray5 center-block">
			<%= link_to squares_path do %>
				<span class="fa fa-3x fa-fw fa-square-o action-icon"></span>
			<% end %>
		</div>
		<%= link_to squares_path do %>All Squares<% end %>
	</div>
</div>   <!-- 2nd row of icons -->
