<!--Adapted for use by Kevin M. -->
<% provide(:title, "New teacher") %>

<!-- page header -->
<%= render partial: 'schools/school_page_header', 
			:locals => { 	:title => "New teacher", 
										:subtitle => "add a new teacher to #{ @school.full_name }"} %>

<!-- Teacher profile area -->
<%= form_for(@teacher) do |f| %>
	<%= render 'error_messages', object: f.object %>

	<!-- school_id fetched from admin -->
	<%= f.hidden_field :school_id, :value => current_teacher.school_id %>

	<!-- username for login -->
	<div class="row form-row">
		<div class="col-xs-2 col-xs-offset-1"><h4>Username: </h4></div>
		<div class="col-xs-2">
			<%= f.text_field :user_name, class: 'form-control', id: 'teacherID' %>
		</div>
	</div>

	<!-- name -->
	<div class="row form-row">
		<div class="col-xs-2 col-xs-offset-1"><h4>Name: </h4></div>
		<div class="col-xs-4">
			<%= f.text_field :full_name, class: 'form-control', id: 'teacherName' %>
		</div>
	</div>  

	<!-- email -->
	<div class="row form-row">
		<div class="col-xs-2 col-xs-offset-1"><h4>Email: </h4></div>
		<div class="col-xs-4">
			<%= f.email_field :email, class: 'form-control', id: 'email' %>
		</div>
	</div>

	<!-- powers: is teacher an admin? -->
	<div class="row form-row">
		<div class="col-xs-2 col-xs-offset-1"><h4>Powers: </h4></div>
		<div class="col-xs-2 checkbox">
			<%= f.label :admin do %>
				<%= f.check_box :admin, { }, "true", "false" %>Admin
			<% end %>
		</div>
	</div>

	<!-- teacher icon includes color, icon choice, and interactive sample -->
	<div class="row">
		<div class="col-xs-2 col-xs-offset-1"><h4>Teacher Icon:</h4></div>
	</div>

	<div class="row form-row vertical-align">
		<!-- color and icon spinners in the 1st column -->
		<div class="col-xs-4 col-xs-offset-3">
			<div class="row">
				<div class="col-xs-3"><h4>Color: </h4></div>
				<div class="col-xs-7 col-xs-offset-1">
					<%= f.select :color, teacherColors.map {|color| [color.titleize, color]}, 
											{}, {class: 'form-control'} %>
				</div>
			</div>   <!-- row -->
			<div class="row">
				<div class="col-xs-3"><h4>Icon: </h4></div>
				<div class="col-xs-7 col-xs-offset-1">
					<%= f.select :icon, teacherIcons.map {|icon| [icon.titleize, icon]}, 
									{}, {class: 'form-control'} %>
				</div>
			</div>   <!-- row -->
		</div>   <!-- form selects col -->
	</div>   <!-- color+icon row -->

	<!-- form spacer after password -->
	<div class="form-spacer">	&nbsp;</div>

	<!-- password -->
	<div class="row form-row">
		<div class="col-sm-offset-1 col-sm-2"><h4>Password: </h4></div>
		<div class="col-sm-4 col-sm-offset-0">
			<%= f.password_field :password, class: 'form-control'%>
		</div>
	</div>

	<!-- confirm password -->
	<div class="row form-row">
		<div class="col-sm-offset-1 col-sm-2"><h4>Confirm Password: </h4></div>
		<div class="col-sm-4 col-sm-offset-0">
			<%= f.password_field :password_confirmation, class: 'form-control'%>
		</div>
	</div>

	<!-- OK/cancel buttons -->
	<div class="row action-buttons-row">
		<div class="col-sm-1 col-sm-offset-2"> 
			<%= button_tag(type: 'submit', class: "btn btn-success") do %>  
	  		Add New Teacher
	  	<% end %>
		</div>
		<div class="col-sm-1 col-sm-offset-1"> 
			<%= link_to "Cancel", teachers_path, :class => "btn btn-danger" %>
		</div>
	</div>
<% end %>
