<% provide(:title, "Change password") %>

<!-- page header -->
<%= render partial: 'teacher_page_header', 
			:locals => { 	:title => "Change password", 
										:subtitle => "change paswword of teacher #{ @teacher.full_name }"} %>

<!--Edit Login Settings form -->
<%= form_for(@teacher) do |f| %>
	<%= render 'error_messages', object: f.object %>

<div class="row form-row2">

	<!-- login username -->
	<div class="col-xs-10 col-md-6 col-lg-4 form-group">
		<label>Login Username</label>
   	<%= f.text_field :user_name, :readonly => true, class: 'form-control form-input-tweak' %>
	</div>

	<!-- teacher name -->
	<div class="col-xs-10 col-md-6 col-lg-4 form-group">
		<label>Name</label>
		<%= f.text_field :full_name, :readonly => true, class: 'form-control form-input-tweak' %>
	</div>

</div>   <!-- row -->

<div class="form-spacer"></div>

<div class="row form-row2">

	<!-- password -->
	<div class="col-xs-10 col-md-8 form-group">
		<label>New Password</label>
		<%= f.password_field :password, required: true, 
					class: 'form-control form-input-tweak' %>
	</div>

	<div class="clearfix"></div>

	<!-- confirm password -->
	<div class="col-xs-10 col-md-8 form-group">
		<label>Confirm Password</label>
		<%= f.password_field :password_confirmation, required: true, 
					class: 'form-control form-input-tweak' %>
	</div>

</div>   <!-- row -->

<!-- OK, Cancel buttons -->
<div class="row form-row2 pad20">
	<div class="col-xs-8 text-center">
		<%= button_tag(type: 'submit', class: "btn btn-success", name: 'editc') do %>Change Password <%end%>
		&nbsp; &nbsp; &nbsp;
		<%= link_to "Cancel", edit_teacher_path, 
					:class => "btn btn-danger", :title => "Back to Setup teacher page" %>
	</div>
</div>

<% end %>   <!-- change password form-->
