<!-- form/row to remove a student from the teacher's access roster -->
<%= form_for(@teacher) do |f| %>

	<!-- remove student label and spinner -->
	<div class="col-xs-4 form-group">
		<label>Remove Student</label>
		<%= select_tag 'remove_student_id', 
					options_from_collection_for_select(@students, "id", "full_name"), 
					class: 'form-control form-input-tweak',
					:include_blank => 'Select student', :required => true %>
	</div>

	<!-- remove student minus sign button-->
	<div class="col-xs-2 form-group text-left pad20">
		<%= button_tag(type: 'submit', class: "btn btn-danger", name: "editb_remove") do %> 
			<span class="fa fa-minus icon-white"></span> 
		<% end %>
	</div>

<% end %>   <!-- remove student form -->
